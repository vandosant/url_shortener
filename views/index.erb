<form method="post" action="/">
  <div class="container">
    <div class="error">
      <% if error_status %>
        <%= 'The text you entered is not a valid URL' %>
      <% end %>
    </div>
    <input class="input" type="text" name="url_to_shorten" placeholder='Enter the URL you would like to "shorten"'/>
  </div>
  <div class="container">
    <button class="button" type="submit">Shorten</button>
  </div>
</form>